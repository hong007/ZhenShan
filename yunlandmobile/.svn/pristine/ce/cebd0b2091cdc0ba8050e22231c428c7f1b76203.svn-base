html,body{
	width: 100%;
	height: 100%;
}
.rls-banner img{
	width: 100%;
	height: auto;
}
.rls-content{
	padding:0 15px;
}
.rls-tab{
	width: 100%;
}
.rls-tab-list p{
	text-align: center;
	font-size: 16px;
	margin-bottom: 15px;
	/*color: */
}
.rls-tab-list p span{
	position: relative;
}
.rls-tab-list p span:first-child{
	margin-right: 30px;
}
.rls-tab-list p .span-active{
	color: #f15f5f;
}
.rls-tab-list p .span-active:after{
	content: "";
	position: absolute;
	top: 24px;
	left: 50%;
	margin-left: -8px;
	display: inline-block;
	height: 0;
	border-bottom: 2px solid #f15f5f; 
	width: 16px;
}
.rls-tal-cont{
	width: 100%;
}
.rls-tal-cont ul{
	background: #fff;
	width: 100%;
	border:1px solid #ddd;
	padding-left: 20px;
	padding-bottom: 15px;
	border-radius: 5px;
	box-sizing: border-box;
	-webkit-box-sizing: border-box;
	overflow: hidden;
}
.rls-tal-cont ul li{
	padding-right: 30px;
	width: 100%;
	height: 36px;
	line-height: 36px;
	position: relative;
	box-sizing: border-box;
	-webkit-box-sizing: border-box;
}
.rls-tal-cont ul li:first-child{
	white-space: nowrap;
	margin-left: -10px;
}
.rls-tal-cont ul li:last-child{
	position: relative;
}
.rls-select{
	width: 37%;
	height: 25px;
	line-height: 25px;
}
.rls-tal-cont ul li input{
	width: 75%;
	height: 23px;
	line-height: 23px;
	padding:0;
	border:1px solid #ddd;
}
.rls-tal-cont ul li label{
	width: 20%;
	display: inline-block;
	min-width: 50px;
	height: 23px;
	line-height: 23px;
}
.errortip{
	display: none;
	/*position: absolute;
	top: 36px;
	right: 0;*/
	float: right;
	height: 20px;
	line-height: 20px;
	margin-top: -5px;
	color: #f15f5f;
	font-size: 1.1rem;
}
.errorimg{
	display: block;
	position: absolute;
	top: 7px;
	right: 12px;
	float: right;
	width: 22px;
	height: 22px;
	line-height: 20px;
	/*border:1px solid red;*/
}
.errorwrong{
	background: url(../images/sprite-icon.png) no-repeat -68px -212px;
}
.errorright{
	background: url(../images/sprite-icon.png) no-repeat -68px -251px;
}
.submit-msg{
	width: 100%;
	position: relative;
	display:block;
	margin: 10px 0;
	height: 44px;
	line-height: 44px;
	padding:0;
	border-radius: 3px;
	font-size: 1.8rem;
	color: #fff;
	text-align: center;
	background-color: #fb5757;
	border:none;
}
#releaseSucc{
	display: none;
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	overflow: hidden;
	background: rgba(0,0,0,0.3);
	z-index: 999999;
}
.layer-content{
	position: absolute;
	top: 50%;
	left: 50%;
	margin: -43px 0 0 -90px;
	width: 180px;
	height: 59px;
	text-align: center;
	padding: 15px 0px 11px 3px;
	border-radius: 3px;
	border:1px solid #f15f5f;
	box-shadow: 1px 1px 1px rgba(0,0,0,0.3);
	font-size: 12px;
	z-index: 99999;
	background: #fff;
}
.layer-content h2{
	color: #f15f5f;
	margin-bottom: 5px;
	font-size: 12px;
}
.layer-content p{
	color: #838383;
}