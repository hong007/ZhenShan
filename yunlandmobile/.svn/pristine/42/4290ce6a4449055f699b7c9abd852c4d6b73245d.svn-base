@charset "utf-8";
/* 登录 注册 */
.logo-black {
	margin: 48px 0;
	text-align: center;
}
.logo-black img {
	height: 80px;
}
/* 翻页 */
.page {
	width: 100%;
	position: relative;
	overflow: hidden;
}
.page p {
	width: 90px;
	height: 40px;
	line-height: 40px;
	font-size: 14px;
	border-radius: 2px;
	text-align: center;
	color: #fff;
	background-color: #0fdebd;
}
.page p a{ color: #fff;}
.page p.prev{
	position: absolute;
	top: 0;
	left: 0;
	float: right !important;
}
.page p.next{
	position: absolute;
	top: 0;
	right: 0;
}
.page p.sum{
	text-align: center;
	margin: 0 auto;
	color: #c6c6c6;
	background-color: transparent;
}
.page p i{
	font-size: 16px;
	color: #fff;
}
.page p i.icon-next{
	margin-left: 2px;
	margin-right: -5px;
}
.page p i.icon-prev{
	margin-left: -5px;
	margin-right: 2px;
}
/* 返回顶部 */
#toTop {
    display: none;
    position: fixed;
    bottom: 5px;
    right: 5px;
    width: 50px;
    height: 50px;
	border-radius: 25px;
    opacity: 0.4;
    filter: alpha(opacity=40); 
	z-index: 1000;
}
#toTop img{width: 100%;
height: 100%}
#toTop:hover {
    opacity: 0.8;
    filter: alpha(opacity=80); 
}
/*删选按钮*/
.current{
	height: 28px;
	line-height: 28px;
	overflow: hidden;
	padding-top: 10px;
}
.screening .current a{
	border-radius: 5px;
	border:1px solid #1fe0c1;
	padding:4px 11px;
	font-size: 12px;
	height: 17px;
	line-height: 17px;
	color:#1fe0c1;
	float: right;
	margin-right: 10px;
}