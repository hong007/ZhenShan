            //     }else{
            //         $("#" + curD).toggle().closest("li").siblings("li").find(".category-child").hide();
            //     }

            //     if ($("#" + curD).is(":hidden")) {
            //         // alert("隐藏了");
            //         $(".category li.active").removeClass("active");

            //     }
            // // $(this).find("a").attr("href","javascript:history.back()")
            // })
        })
    </script>
</body>
</html>