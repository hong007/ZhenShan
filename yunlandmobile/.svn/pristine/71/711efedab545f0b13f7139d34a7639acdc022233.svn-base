    <!-- 侧边栏 end -->
    <div class="containBox active" id="containBox">
        <!-- header -->
        <div class="header">
            <a id="panelSwitch" class="menu-wrap navBtn" href="javascript:void(0);">
                <i class="menu">
                    <img src="../../images/icon-menu.png" />
                </i>
