    <script type="text/javascript">
        // 验证密码
    var ph=1;
    var psw=1;
    var repsd=1;
    // 验证手机号
      function checkTextLength(obj,length){
        if(obj.value.length>length){
          obj.value=obj.value.substr(0,length)
        }
      }
      function checkTextValue(obj){
        // var reg= /^13[0-9]{9}$|14[0-9]{9}|15[0-9]{9}$|18[0-9]{9}$/;
        var reg=/^1[0-9]{10}$/;
        if (obj.value=="") {
          alert("手机号不能为空！");
          ph=1;
          // obj.focus
          // obj.style.borderBotttomColor=red;
        }else if (!reg.test(obj.value)) {
          ph=1;
          alert("手机格式错误！");
          // return
        }else{
          // alert("手机号正确");
          ph=2;
        }
      }

    
    $(function(){
      $("#password").blur(function(){
          $("#repeat").val("").focus();
        if($(this).val()==""){

          alert("密码不能为空！")
        }else if($(this).val().length<6){
          alert("密码不能少于六位！")
        }else{
          // alert("密码正确");
          // psw=2;
          // $("#repeat").focus();
        }
      });
      $("#repeat").blur(function(){
         if($(this).val()==""){
          repsd=1;
          alert("密码不能为空！")
        }else if($(this).val().length<6){
          alert("密码不能少于六位！");
          repsd=1;

        }else if($(this).val()!=$("#password").val()){
          alert("密码不一致！");
          $("#password").focus();
          repsd=1;
        }else{
          // alert("验证密码号正确");
          repsd=2;
        }
      });
      $("#submitIn").click(function(){
        if (ph==2 && repsd==2) {
          alert("通过");
        }else{
          alert("请先填写注册信息")
        }
      })
    })
      
    </script>
