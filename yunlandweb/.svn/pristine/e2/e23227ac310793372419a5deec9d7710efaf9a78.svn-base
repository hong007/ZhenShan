.pagination {
    font-size: 12px;
    text-align: center;
	margin-top: 30px;
}
.pagination a {
    text-decoration: none;
}
.pagination a, .pagination span {
    padding:2px 4px;
    border:1px solid #c4c4c4;
    color:#333;
    margin:0 5px;
}
.pagination span{cursor: pointer;}

.pagination a:hover, .pagination .active {
    color: #04A4F8;
    border: 1px solid #04A4F8;
    background: #DDF1FF;
}
