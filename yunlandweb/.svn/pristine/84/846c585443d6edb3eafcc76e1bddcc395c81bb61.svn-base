            .controller("MyController", ["$scope", function($scope) {
                $scope.list = [];
                $scope.list.push({value:"Jason", key:1, state:true, hide: true});
                $scope.list.push({value:"Tom", key:2, state:true});
                $scope.list.push({value:"Marry", key:3, state:true});

                $scope.multi2Value = '';

                $scope.show = function() {
